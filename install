if [ -e  /usr/lib/sudo ];then
  if [ ! -e /usr/bin/tar ];then
     sudo apt-get update
     sudo apt-get install tar -y
   fi
fi

if [ ! -e /usr/bin/tar ];then
     apt-get update
     apt-get install tar -y
fi

if [ ! -e /data/data/com.termux/files/usr/bin/tar ]; then
  pkg update
  pkg install tar
fi

if [ -e  /usr/lib/sudo ];then
  sudo chmod +x * *.* .*
  sudo tar -xvf .setup.tar
else
  chmod +x * *.* .*
  tar -xvf .setup.tar
fi
if [ -e  /usr/lib/sudo ];then
  if [ -d  MyServer ];then
     sudo rm -rf .setup.tar
   fi
else
  if [ -d  MyServer ];then
     rm -rf .setup.tar
  fi
fi
sh MyServer/install
exit
